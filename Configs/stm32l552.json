{
    "inherits": "stm32.json",
    
    "vendor":   "st",
    "board":    "STM32L552",
    "family":   "stm32l5xx",

    "build":{

        "alayer":               "stm32l5xx-hal-driver",
        "startup_script":       "startup_stm32l552xx.s",
        "linker_script":        "STM32L552ZETXQ_FLASH.ld",
        "startup_script_path":  "cmsis-device-l5/Source/Templates/gcc",

        "drivers":{
            "cmsis_5":           "CMSIS_5/CMSIS/Core/Include/",
            "cmsis-device":      "cmsis-device-l5/Include/"
        }
    },

    "openocd":{
        "interface":        "stlink",
        "target":           "stm32l5x"
    },

    "uart": {
        "instance": "LPUART1",
        "baudrate": 115200,
        "tx_pin": "PG7",
        "rx_pin": "PG8"
    },

    
    "timers": {
        "TIM1": {
            "type": "advanced",
            "period": 65535,
            "trigger": ["TIM15", "TIM2", "TIM3", "TIM4"]
        },
        
        "TIM2": {
            "type": "general",
            "period": 4294967295,
            "trigger": ["TIM1", "TIM8", "TIM3", "TIM4"]
        },
        "TIM3": {
            "type": "general",
            "period": 65535,
            "trigger": ["TIM1", "TIM2", "TIM15", "TIM4"]
        },
        "TIM4": {
            "type": "general",
            "period": 65535,
            "trigger": ["TIM1", "TIM2", "TIM3", "TIM8"]
        },
        "TIM5": {
            "type": "general",
            "period": 4294967295,
            "trigger": ["TIM2", "TIM3", "TIM4", "TIM8"]
        },
        
        "TIM6": {
            "type": "basic",
            "period": 65535
        },
        "TIM7": {
            "type": "basic",
            "period": 65535
        },

        "TIM8": {
            "type": "advanced",
            "period": 65535,
            "trigger": ["TIM1", "TIM2", "TIM4", "TIM5"]
        },
    
        "TIM15": {
            "type": "general",
            "period": 65535,
            "trigger": ["TIM1", "TIM3", "TIM16_OC1", "TIM17_OC1"]
        },
        "TIM16": {
            "type": "general",
            "period": 65535
        },
        "TIM17": {
            "type": "general",
            "period": 65535
        }
    }
}