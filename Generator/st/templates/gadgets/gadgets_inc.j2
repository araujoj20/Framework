#ifndef GADGETS_H
#define GADGETS_H

/* Auto-generated gadget helper macros */

{% for g in groups %}
/* === Gadget Group: {{ g.name }} === */
{%- for e in g.entries %}
{%- if e.is_timer %}
/* Timer {{ e.ident }} */
#define GDG_{{ g.upper }}_{{ e.macro_timer }}_Init              {{ e.fn_call }}
#define GDG_{{ g.upper }}_{{ e.macro_timer }}_HandleTypeDef     {{ e.tim_handle }}
{%- if e.dma_handle %}
#define GDG_{{ g.upper }}_{{ e.macro_timer }}_DMA_HandleTypeDef {{ e.dma_handle }}
{%- endif %}
{%- elif e.is_dma and e.dma_handle %}
/* DMA {{ e.raw }} */
#define GDG_{{ g.upper }}_{{ e.dma_name }}_HandleTypeDef     {{ e.dma_handle }}
{%- endif %}
{%- endfor %}

{% endfor %}

#endif /* GADGETS_H */
