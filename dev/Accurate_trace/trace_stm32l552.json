{
    "inherits": "stm32.json",

    "vendor":   "st",
    "board":    "STM32L552",
    "family":   "stm32l5xx",

    "build": {

        "startup_script":       "startup_stm32l552xx.s",
        "linker_script":        "STM32L552ZETXQ_FLASH.ld",
        "startup_script_path":  "cmsis-device-l5/Source/Templates/gcc",
        "alayer":               "stm32l5xx-hal-driver",

        "drivers":{
            "cmsis_5":           "CMSIS_5/CMSIS/Core/Include/",
            "cmsis-device":      "cmsis-device-l5/Include/"
        }
    },

    "openocd": {
        "interface":        "stlink",
        "target":           "stm32l5x"
    },

    "uart": {
        "instance": "LPUART1",
        "baudrate": 115200,
        "tx_pin":   "PG7",
        "rx_pin":   "PG8"
    },

    "timers": {
        "TIM1": {
            "Period": 65535,
            "trigger_source": "TIM2"
        },

        "TIM2": {
            "Period": 222,
            "dma":  "dma1_channel7",
            "trigger_event": "UPDATE"
        },

        "TIM4_OW_2": {
            "Period": 12345
        },

        "TIM3": {
            "Period": 65535
	    },

        "TIM3_OW_1": {
            "Period": 1,
            "dma": "dma1_channel4"
        },

        "TIM8": {
            "Period": 65535,
            "dma": "dma1_channel7"
        }
    },

    "dmas": {
        "dma1_channel1": {
            "name": "DMA1",
            "channel": "Channel1",
            "direction": "MEMORY_TO_MEMORY"
        },
        "dma2_channel5": {
            "name": "DMA2",
            "channel": "Channel3",
            "direction": "MEMORY_TO_MEMORY"
        },
        "dma1_channel2": {
            "name": "DMA1",
            "channel": "Channel1",
            "direction": "MEMORY_TO_MEMORY"
        },
        "dma1_channel4": {
            "name": "DMA1",
            "channel": "Channel5",
            "direction": "PERIPH_TO_MEMORY"
        },
        "dma1_channel7": {
            "name": "DMA1",
            "channel": "Channel7",
            "direction": "MEMORY_TO_PERIPH"
        }
    },

    "gadgets": {
        "counter": [
            "TIM7",
            "TIM3"
        ],

        "trigger": [
            "TIM2",
            "TIM3_OW2"
        ],

        "detect": [
            "TIM7",
            "TIM4_OW1"
        ]
    },

    "trace": {
        "tim_counter": "TIM7",
        "tim_trigger": "TIM8"
    },
    
    "mem_map": {
        "contention":   "0x20018000",
        "no_contention":"0x20030000"
    }
}